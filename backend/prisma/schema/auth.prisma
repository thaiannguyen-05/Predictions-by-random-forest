model UserDevice {
  id         String   @id @default(uuid()) @map("device_id") @db.Uuid
  deviceId   String   @unique
  nameDevice String   @map("device_name")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // foreign key
  userId String @map("user_id") @db.Uuid

  // relaions
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([nameDevice, userId])
  @@index([userId])
  @@map("user_devices")
}

model Session {
  id                 String    @id @default(uuid()) @map("session_id") @db.Uuid
  userDeviceId       String
  hashedRefreshToken String?   @map("hashed_refresh_token")
  userAgent          String?   @db.VarChar(1000)
  userIp             String    @map("user_ip")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")
  loginedAt          DateTime? @map("logined_at") @db.Timestamptz(6)
  logoutedAt         DateTime? @map("logouted_at") @db.Timestamptz(6)

  // forreign keys
  userId String @db.Uuid

  // relaions
  user User @relation("sessions", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, userDeviceId])
  @@map("sessions")
}

model Code {
  id        String   @id @default(uuid()) @map("code_id") @db.Uuid
  code      String   @db.VarChar(255)
  type      CodeType @default(VERIFICATION) @map("code_type")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // foregin key
  userId String @map("user_id") @db.Uuid

  // relaions
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([code, userId])
  @@index([userId])
  @@map("codes")
}

enum AccountType {
  EMAIL
  OAUTH2
  FACEBOOK
  LOCAL
  SOCIAL

  @@map("account_type")
}
