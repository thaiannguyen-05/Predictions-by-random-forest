model UserDevice {
  id         String   @id @default(uuid()) @map("device_id") @db.Uuid
  deviceId   String   @unique @db.VarChar(255)
  nameDevice String   @map("device_name") @db.VarChar(255)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // foreign key
  userId String @map("user_id") @db.Uuid

  // relaions
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([nameDevice, userId])
  @@index([userId])
  @@map("user_devices")
}

model Session {
  id                 String    @id @default(uuid()) @map("session_id") @db.Uuid
  userDeviceId       String    @db.Uuid
  hashedRefreshToken String?   @map("hashed_refresh_token") @db.VarChar(255)
  userAgent          String?   @db.VarChar(1000)
  userIp             String    @map("user_ip") @db.VarChar(45)
  createdAt          DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt          DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
  loginedAt          DateTime? @map("logined_at") @db.Timestamptz(6)
  logoutedAt         DateTime? @map("logouted_at") @db.Timestamptz(6)

  // forreign keys
  userId String @db.Uuid

  // relaions
  user User @relation("sessions", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, userDeviceId])
  @@map("sessions")
}

enum AccountType {
  EMAIL
  OAUTH2
  FACEBOOK
  LOCAL
  SOCIAL

  @@map("account_type")
}

model Message {
  id          String      @id @default(uuid()) @db.Uuid
  content     String      @db.Text
  typeMessage TypeMessage @default(TEXT)

  // foreign keys
  senderId   String  @db.Uuid
  receiverId String? @db.Uuid
  roomId     String  @db.Uuid

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  // relations
  sender   User  @relation(name: "sender-message", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User? @relation(name: "receiv-message", fields: [receiverId], references: [id], onDelete: Cascade)
  room     Room  @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([senderId, id])
  @@index([senderId, id])
}

enum TypeMessage {
  TEXT
  IMAGE
  FILE
  VOICE
}

model Room {
  id String @id @default(uuid()) @db.Uuid

  // foreign keys 
  employeeId String? @db.Uuid
  customerId String  @db.Uuid

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  // relations
  messages Message[]
  members  MemberInRoom[]

  @@unique([employeeId, customerId])
}

model MemberInRoom {
  id String @id @default(uuid()) @db.Uuid

  // foreign key
  userId String @db.Uuid
  roomId String @db.Uuid

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)

  // relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(uuid()) @db.Uuid
  fullname       String         @db.VarChar(50)
  username       String         @unique @db.VarChar(250)
  email          String         @unique @db.VarChar(255)
  hashedPassword String?        @map("hashed_password") @db.VarChar(255)
  accountType    AccountType    @default(EMAIL) @map("account_type")
  avtUrl         String?        @map("avt_url") @db.VarChar(1000)
  address        String?        @db.VarChar(500)
  city           String?        @db.VarChar(50)
  searchCount    Int            @default(0) @map("search_times")
  createdAt      DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime       @updatedAt @map("updated_at") @db.Timestamptz(6)
  visible        UserVisibility @default(PUBLIC)
  phone          String?        @db.VarChar(20)
  numberIdentity String?        @db.VarChar(20)
  dateOfBirth    DateTime?      @db.Timestamptz(6)
  firstName      String?        @db.VarChar(50)
  lastName       String?        @db.VarChar(50)
  isActive       Boolean        @default(false)
  isBanned       Boolean        @default(false) @map("is_banned")
  isLocked       Boolean        @default(false) @map("is_locked")
  lastActived    DateTime?      @map("last_actived") @db.Timestamptz(6)
  picture        String?        @db.VarChar(1000)
  provider       String?        @db.VarChar(50)

  //  
  Oauth2User     Oauth2User[]   @relation("oauth2")
  sessions       Session[]      @relation("sessions")
  userDevice     UserDevice[]
  senderMessage  Message[]      @relation("sender-message")
  receiveMessage Message[]      @relation("receiv-message")
  memberInRoom   MemberInRoom[]

  @@index([username])
  @@index([email])
  @@index([createdAt])
  @@map("users")
}

model Oauth2User {
  id             String   @id @default(uuid()) @db.Uuid
  provider       Provider
  providerUserId String   @map("provider_user_id") @db.VarChar(500)
  email          String   @unique @db.VarChar(255)
  phone          String?  @db.VarChar(20)
  firstname      String?  @db.VarChar(50)
  lastname       String?  @db.VarChar(50)
  fullname       String?  @db.VarChar(50)
  avatarUrl      String?  @map("avatar_url") @db.VarChar(1000)
  username       String?  @db.VarChar(50)
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)
  userId         String   @map("user_id") @db.Uuid
  user           User     @relation("oauth2", fields: [userId], references: [id], onDelete: Cascade)

  @@map("oauth2_user")
}

enum Provider {
  FACEBOOK
  GOOGLE

  @@map("provider")
}

enum CodeType {
  VERIFICATION
  PASSWORD_RESET
  EMAIL_CHANGE
  PHONE_CHANGE

  @@map("code_type")
}

enum Status {
  ACTIVE
  SOLTDELETE
  PENDING

  @@map("status")
}

enum UserVisibility {
  PUBLIC
  PRIVATE
  CONTACT_ONLY

  @@map("user_visibility")
}
